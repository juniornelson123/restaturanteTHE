<%- model_class = Comanda -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @comanda.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @comanda.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:establishment_id) %>:</strong></dt>
  <dd><%= @comanda.establishment_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_comandas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_comanda_path(@comanda), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_comanda_path(@comanda),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
